BoxLayoutExample:

<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: .5, None # width, height
        #size: "100dp", "60dp"
        #width: "100dp"
        #height: "60dp"
        # x, center_x, right -> use only one of these options when using pos_hint 
        # y, center_y, top -> for both x and y values range from 0 to 1
        pos_hint : {"center_y":.5}
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"

    Label:
        text: "C"



<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp","80dp"
        pos: "100dp","200dp"
        color: 0, 0, 1, 1
    Label:
        text: "Hello2"
        size: "100dp","80dp"
        pos: "200dp","300dp"
        color: 1, 0, 0, 1